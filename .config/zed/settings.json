{
  "ssh_connections": [
    {
      "host": "orb",
      "projects": [
        {
          "paths": ["/Users/hitblast/Developer/IgKnite"]
        }
      ]
    }
  ],
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  },
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "auto_fold_dirs": true,
    "dock": "right"
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "fixed"
  },
  "tabs": {
    "git_status": true,
    "file_icons": true
  },
  "show_user_picture": false,
  "centered_layout": {
    "left_padding": 0.08,
    "right_padding": 0.08
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "o3-mini"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "inlay_hints": {
    "enabled": true
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 1000,
      "min_column": 80
    }
  },
  "vim_mode": true,
  "seed_search_query_from_cursor": "selection",
  "ui_font_family": "JetBrains Mono",
  "buffer_font_family": "JetBrains Mono",
  "ui_font_size": 14,
  "buffer_font_size": 12.3,
  "buffer_line_height": "comfortable",
  "base_keymap": "VSCode",
  "relative_line_numbers": true,
  "theme": {
    "mode": "system",
    "light": "Xcode Presentation Light",
    "dark": "Fleet Dark"
  },
  "terminal": {
    "blinking": "on",
    "copy_on_select": true,
    "env": {
      "EDITOR": "zed --wait"
    },
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    }
  },
  "auto_install_extensions": {
    "dart": true,
    "git-firefly": true,
    "ruff": true,
    "xcode-themes": true,
    "toml": true
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/dist",
    "**/.vscode"
  ],
  "remove_trailing_whitespace_on_save": true,
  "always_treat_brackets_as_autoclosed": true,
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "off"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  }
}
