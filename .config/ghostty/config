# scrollback
scrollback-limit = 1000000

# font
font-family = "Input Mono Narrow"
font-feature = liga
font-size = 18
font-thicken = true

# shell integrations
shell-integration-features = no-cursor

# cursor
cursor-style-blink = true

# mouse
mouse-hide-while-typing = true

# theme
theme = "xcodelight"

# window
window-colorspace = display-p3
window-width = 101
window-height = 28

# macOS-specific settings
macos-icon = "chalkboard"
macos-titlebar-style = hidden
macos-window-shadow = true

# misc.
alpha-blending = native

# keybinds
keybind = ctrl+n=new_window

keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

keybind = ctrl+w>h=new_split:left
keybind = ctrl+w>j=new_split:down
keybind = ctrl+w>k=new_split:up
keybind = ctrl+w>l=new_split:right
keybind = ctrl+w>f=toggle_split_zoom

keybind = ctrl+w>n=next_tab
keybind = ctrl+w>p=previous_tab

keybind = super+r=reload_config

window-save-state = always


