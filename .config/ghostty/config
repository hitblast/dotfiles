# scrollback
scrollback-limit = 1000000

# font
font-family = "Input Mono Narrow"
font-feature = liga
font-size = 18
font-thicken = true

# shell integrations
shell-integration-features = no-cursor

# cursor
cursor-style-blink = true

# mouse
mouse-hide-while-typing = true

# theme
theme = "xcodelight"

# window
window-colorspace = display-p3
window-width = 101
window-height = 28
window-save-state = always

# macOS-specific settings
macos-icon = "chalkboard"
macos-titlebar-style = hidden
macos-window-shadow = true

# misc.
alpha-blending = native

# keybinds
keybind = ctrl+w>h=goto_split:left
keybind = ctrl+w>j=goto_split:bottom
keybind = ctrl+w>k=goto_split:top
keybind = ctrl+w>l=goto_split:right

keybind = ctrl+n>h=new_split:left
keybind = ctrl+n>j=new_split:down
keybind = ctrl+n>k=new_split:up
keybind = ctrl+n>l=new_split:right

keybind = super+r=reload_config

